rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function myShopId() {
      return userDoc().data.shopId;
    }

    function myRole() {
      return userDoc().data.role;
    }

    function isOwner() {
      return myRole() == "owner";
    }

    // Solo el propio usuario puede leer su doc (y solo backend debería escribirlo)
    match /users/{uid} {
      allow read: if signedIn() && request.auth.uid == uid;
      allow write: if false;
    }

    // Shops root (opcional: owner-only)
    match /shops/{shopId} {
      allow read: if signedIn() && myShopId() == shopId;
      allow write: if signedIn() && myShopId() == shopId && isOwner();
    }

    // Todo lo que cuelga del shop
    match /shops/{shopId}/{document=**} {
      allow read: if signedIn() && myShopId() == shopId;

      // empleados pueden operar módulos normales
      allow write: if signedIn() && myShopId() == shopId;
      // si querés restringir settings a owner, lo hacemos por rutas más específicas
    }

    // Settings: owner-only (si lo usás)
    match /shops/{shopId}/settings/{docId} {
      allow read: if signedIn() && myShopId() == shopId;
      allow write: if signedIn() && myShopId() == shopId && isOwner();
    }
  }
}
